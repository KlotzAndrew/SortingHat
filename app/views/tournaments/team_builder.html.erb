<h1>Building Teams For a Better World</h1>

<%= @name %>

<strong>Inputs (<%= @player_count %>/40) *only works for 40 players</strong> <br>
	<%= form_for @tournament do |t| %>
	  <%= t.submit "Random Values" %>
	<% end %>
<div style="margin-top: 25px;">
	Solo Players: <%= @solo_players %> <br>
	<%= form_for @tournament do |t| %>
	  <%= t.text_field :solo_input, value: "eg, 123,456,689" %>
	  <%= t.submit "Update Solo Players" %>
	<% end %>
</div>

<div style="margin-top: 25px;">
	Duo Players: <%= @duo_players %> <br>
	<%= form_for @tournament do |t| %>
	  <%= t.text_field :duo_input, value: "eg, 123,456,689,124" %>
	  <%= t.submit "Update Duo Players" %>
	<% end %>
</div>

<div style="margin-top: 25px;">
	<%= form_for @tournament do |t| %>
	  <%= t.submit "Balance Teams" %>
 *Settings @ low, freezes page for 1-2 minutes
	<% end %>
</div>

<% if @balanced_teams.count > 0 %>
	<div style="margin-top: 25px;">
		<strong>Output</strong> <br/>
		<% i = 1 %>
		<% @balanced_teams.each do |x| %>
			Team <%= i %>: 
			[
			<% y = x.sort_by(&:to_i) %>
			<% y.each do |z| %> 
				<% if @check.include?(z) %>
					<u><%= z %></u> 
				<% else %>
					<%= z %>
				<% end %>,
			<% end %> ]
			<i>(avg: <%= @team_totals[i-1] %>, Diff from mean: <%= @team_totals[i-1] - @team_mean %>)</i><br/>
			<% i = i += 1 %>
		<% end %>
		<br/>
	STD: <strong><%= @std %></strong>, AVG: <strong><%= @team_mean %></strong>, Spread: <strong><%= @team_totals.max - @team_totals.min %></strong>
	</div>
<% end %>